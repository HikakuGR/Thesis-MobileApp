<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Coordination</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Coordination", "Index", "Home")</p>
                    <br>
                    <ul id="menu">
                        <li>@Html.ActionLink("User", "Index", "User")</li>
                        <li>@Html.ActionLink("Job", "Index", "Job")</li>
                        <form action="" class="float-right">
                            <input type="checkbox" name="allUsers" value="allUsers">Show all users<br>
                            <input type="checkbox" name="alljobs" value="allJobs">Show all jobs<br>
                        </form>
                    </ul>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper  clear-fix">
                @if (ViewData["ErrorMessage"] != null) {<h3 style="color:red">@ViewData["ErrorMessage"]</h3>
                }
                @RenderBody()
                 
                
               
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Coordination</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
