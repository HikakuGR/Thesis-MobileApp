<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hikaku.coordination.DetailsActivity"
    android:id="@+id/DetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/jobNameField"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/jobDescriptionField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/jobDescriptionField"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Job Name:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Job Descrition:"
        android:id="@+id/textView2"
        android:layout_below="@+id/jobIDField"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Assign"
        android:id="@+id/btnRequestAssign"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="btnRequestAssign_OnClick"
        android:layout_alignRight="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Complete!"
        android:id="@+id/jobComplete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="btnJobComplete_OnClick"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/jobCancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/jobIDField"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Job ID:"
        android:id="@+id/textView5"
        android:layout_below="@+id/jobNameField"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Job"
        android:id="@+id/jobCancel"
        android:onClick="btnJobCancel_OnClick"
        android:visibility="invisible"
        android:layout_alignTop="@+id/jobComplete"
        android:layout_toRightOf="@+id/btnRequestAssign"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
